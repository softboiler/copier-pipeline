{
  //* Experimental File Nesting
  "explorer.sortOrder": "foldersNestsFiles",
  "explorer.experimental.fileNesting.enabled": true,
  "explorer.experimental.fileNesting.expand": false,
  "explorer.experimental.fileNesting.operateAsGroup": false,
  "explorer.experimental.fileNesting.patterns": {
    "*.ts": "${capture}.js",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts",
    "tsconfig.json": "tsconfig.*.json",
    "package.json": "package-lock.json, yarn.lock",
    ".nest_tooling": "{{ _copier_conf.answers_file }}.jinja, *{% endif %}.jinja, package.json",
    ".nest_markdown": "*.md, *.md.jinja, LICENSE.jinja"
  },

  //* Custom file associations
  "files.associations": {
    ".coveragerc": "ini",
    ".env": "dotenv",
    ".pylintrc": "ini",
    "pyrightconfig.json": "jsonc",
    "*requirements*.txt": "pip-requirements",
    ".nest_*": "plaintext"
  }
}
